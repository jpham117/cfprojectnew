<!-- This partial will display a form for creating a new comment on a product (if a user is signed in). -->
<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>  <!-- To save a comment to the database w/out reloading the page, need to add data-remote attribute to our form and set it to true using remote:true -->
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>
    
    <div class="rating"></div>

    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
<% end %>


